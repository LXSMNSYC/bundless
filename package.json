{
    "name": "root",
    "scripts": {
        "test": "cross-env NODE_ENV=test jest --colors",
        "test:hmr": "cross-env HRM_TESTS=1 yarn jest hmr-test-app",
        "watch": "ultra -r watch",
        "cli": "ultra -r cli",
        "build": "ultra --build -r --filter '@bundless/*' build",
        "fix-mismatches": "syncpack fix-mismatches --indent '    '",
        "release": "yarn build && changeset publish"
    },
    "workspaces": {
        "nohoist": [
            "examples/with-many-dependencies/preact",
            "**/preact"
        ],
        "packages": [
            "bundless",
            "examples/*",
            "website",
            "fixtures/*",
            "tests",
            "with-pages",
            "plugins/*",
            "hmr-test-app",
            "paged",
            "temp"
        ]
    },
    "devDependencies": {
        "@changesets/cli": "^2.12.0",
        "@jest/types": "^26.6.2",
        "@sucrase/jest-plugin": "^2.0.0",
        "@types/jest": "^26.0.19",
        "@types/jest-specific-snapshot": "^0.5.5",
        "@types/react": "^17.0.0",
        "cross-env": "^7.0.3",
        "esm": "^3.2.25",
        "jest": "^26.6.3",
        "typescript": "^4.1.2",
        "ultra-runner": "^3.6.0"
    },
    "private": true,
    "repository": "https://github.com/remorses/bundless.git",
    "author": "remorses <beats.by.morse@gmail.com>",
    "license": "MIT"
}
